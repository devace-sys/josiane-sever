# Server Configuration
PORT=3000
NODE_ENV=development

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/healthcare_app?schema=public"

# JWT Configuration (CRITICAL - Change in production!)
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters_long_for_security
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_TIMEOUT_MINUTES=15

# Rate Limiting
ENABLE_RATE_LIMITING=true
MAX_API_REQUESTS_PER_WINDOW=100
MAX_AUTH_ATTEMPTS=5
MAX_MESSAGES_PER_MINUTE=30
MAX_UPLOADS_PER_HOUR=10

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Firebase Push Notifications
FIREBASE_SERVICE_ACCOUNT_PATH=./config/firebase-service-account.json

# Email Configuration (Optional - for password reset, welcome emails, etc.)
# Leave commented for development (emails will be logged to console)
# For production, configure one of the following:

# Option 1: Gmail SMTP
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-16-character-app-password
# SMTP_FROM="Perfect Control App <noreply@perfectcontrolapp.com.br>"

# Option 2: SendGrid
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASS=your-sendgrid-api-key
# SMTP_FROM="HealthCare App <noreply@yourdomain.com>"

# Option 3: Mailgun
# SMTP_HOST=smtp.mailgun.org
# SMTP_PORT=587
# SMTP_USER=your-mailgun-smtp-username
# SMTP_PASS=your-mailgun-smtp-password
# SMTP_FROM="HealthCare App <noreply@yourdomain.com>"

# Email customization
# APP_NAME="Perfect Control App"
# EMAIL_PRIMARY_COLOR=#6200EA
# FRONTEND_URL=https://perfectcontrolapp.com.br

# CORS Origins (production: API + admin + frontend)
ALLOWED_ORIGINS=https://api.perfectcontrolapp.com.br,https://perfectcontrolapp.com.br,https://www.perfectcontrolapp.com.br,http://admin.perfectcontrolapp.com.br,https://admin.perfectcontrolapp.com.br
# Optional: add IP for fallback/local: http://165.22.150.223,http://165.22.150.223:3000,http://165.22.150.223:5173

# Monitoring & Logging (Recommended for production)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=info

# HIPAA Compliance
AUDIT_LOG_RETENTION_DAYS=365
ENABLE_AUDIT_LOGGING=true
